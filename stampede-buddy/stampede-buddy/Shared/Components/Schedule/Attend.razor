@using stampede_buddy
@inject AppState AppState
<div class="events-main-content">

    <div id="events-container" class="container-fluid">

        <BackButton  Title="Your Schedule" />

        <div id="filter-panel" class="mb-2 row justify-content-center text-center">
        </div>

        <div class="row">
            <hr />
        </div>


        <ScheduleView Events="AppState.Schedule" />

    </div>

    <div id="schedule-attend-menu" class="">
        <div class="row w-100 mt-2 justify-content-center">
            <h2 class="col-10 text-left">Your favourites:</h2>
        </div>


        @if(AppState.Favorites.Count > 0)
        {
            
            <QuickEventBrowser Events="@AppState.Favorites"/>
        } else
        {
            <div class="my-2 mx-2">
            <h4>Oh no!</h4>
            <div>No events were added to your favorites!</div>
            <a href="" @onclick="() => {AppState.setScheduleScreen(ScheduleScreen.EVENT_BROWSER);}">Click here to jump to the Event Browser, where you can add some by pressing "Add to Favorites" on an event!</a>
            </div>
        }

    </div>

    </div>

@code {

    [Parameter]
    public EventCallback<ScheduleScreen> setScreenCallback { get; set; }

    [Parameter]
    public ScheduleScreen currentScreen { get; set; }


    }

